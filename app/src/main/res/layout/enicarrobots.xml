<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enicarrobots"
    android:background="@drawable/radius_gris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back"
            android:layout_width="59dp"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/Compition3"
            android:layout_width="381dp"
            android:layout_height="142dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/jaune"
            android:enabled="false"
            android:fontFamily="cursive"
            android:foregroundGravity="center|center_horizontal"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:paddingTop="20dp"
            android:text=" Enicarthage Robots  5.0"
            android:textColor="@color/gris"
            android:textSize="50dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/description"
            android:layout_width="383dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:textColor="@color/bleu"
            android:layout_marginTop="49dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"


            android:textStyle="bold|italic"
            tools:text='ENICarthage Robots is a national robotics competition held each year in December in the National School of Engineers of Carthage "ENICarthage"' />

        <Button
            android:id="@+id/butplanning"
            android:layout_width="311dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius"
            android:fontFamily="cursive"
            android:foregroundGravity="center_vertical|clip_horizontal|center"
            android:gravity="clip_horizontal|center|center_horizontal"
            android:paddingTop="55px"
            android:paddingBottom="55px"
            android:layout_marginLeft="49dp"
            android:layout_marginBottom="49dp"
            android:layout_marginTop="49dp"



            android:text="Planning"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="36sp" />

        <Button
            android:id="@+id/butcompitition"
            android:layout_width="311dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius"
            android:fontFamily="cursive"
            android:text="Compitition"
            android:paddingTop="55px"
            android:paddingBottom="55px"
            android:layout_marginBottom="49dp"

            android:layout_marginLeft="49dp"

            android:textAllCaps="false"
            android:textColor="@color/blanc"
            android:textColorLink="#AE1111"
            android:textSize="36sp"
            android:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>